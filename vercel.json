{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "^/assets/(.*)", "dest": "/assets/$1" },
    { "src": "^/favicon.ico$", "dest": "/favicon.ico" },
    { "src": "^/robots.txt$", "dest": "/robots.txt" },
    { "src": "^/sitemap.xml$", "dest": "/sitemap.xml" },
    { "src": "^/(.*)\\.(js|css|png|jpg|jpeg|svg|ico|json|map)$", "dest": "/$1.$2" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
